.time-banner {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  height: 130rpx;
  margin-left: 65rpx;
}

.cards-wrapper {
  width: 100%;
  height: calc(100vh - 20rpx);
  /* 让 cards-wrapper 占据屏幕的高度减去上下各 10rpx 的距离 */
}

.swiper-item {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  /* 调整这里，让内容垂直居上 */
}

.card {
  width: 88%;
  /* 调整为屏幕宽度的80% */
  height: 88%;
  /* 调整为屏幕高度的80% */
  background-color: #ffffff;
  margin: 10px auto;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  /* 让卡片内部的内容按垂直方向布局 */
  position: relative;
  /* 添加相对定位 */
  justify-content: space-between;
  /* 垂直方向上内容之间均匀分布 */
}

.subject {
  font-family: "MingLiU", Courier, monospace;
  font-size: 18px;
  margin: 30px 10px 10px 30px;
}

.body {
  font-family: "Apple LiSung Light";
  font-size: 17px;
  line-height: 2;
  text-align: left;
  margin: 10px auto;
  padding: 48rpx 48rpx 48rpx;
  flex-grow: 1; /* 让 .body 自动占据剩余的垂直空间 */
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  justify-content: center; /* 水平居中对齐 */
  flex-grow: 1; /* 让 .body 自动占据剩余的垂直空间 */
  overflow-y: auto; /* 垂直方向滚动溢出内容 */
  text-overflow: ellipsis; /* 使用省略号表示文本溢出 */
  
}

.dateTime {
  position: absolute;
  /* 使用绝对定位 */
  bottom: 10px;
  /* 距离底部 10px */
  margin: 0 auto;
  /* 左右居中 */
  left: 50%;
  /* 居中 */
  transform: translateX(-50%);
  /* 使用 transform 属性水平居中 */
  font-size: x-small;
  color: #777;
  /* 灰色字体颜色，可以根据需要调整灰度程度 */
}